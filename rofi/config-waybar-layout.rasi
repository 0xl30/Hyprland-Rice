/* Main Config (Waybar Layout) */

@import "~/.config/rofi/config.rasi" 

/* ---- Mainbox ---- */
mainbox {
  children:
    [ "inputbar", "message", "listview"];
}

/* ---- Configuration ---- */
configuration {
  modi: "drun";
}

/* ---- Window ---- */
window {
  width: inherit;
  height: inherit;
  location:                   center;
}

/* ---- Entry ---- */ 
entry {
  expand: true;
  placeholder: " 🖼️  Search / Choose Waybar Layout";
}

/* ---- Listview ---- */
listview {
  columns: 2;
  lines: 7;
  fixed-height: false;
  margin: 10px;
  scrollbar: true;
  spacing: 6px;
  cycle: true;
}

/* ---- Elements ---- */
element-icon {
  size: 0%;
}
element-text {
  horizontal-align: 0.0;
  margin: 0px;
  padding: 0px;
}